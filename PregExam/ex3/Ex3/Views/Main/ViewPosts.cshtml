@{
	Layout = null;
}

@model List<Ex3.Models.Post>

@{
    ViewData["Title"] = "View Posts";
}

<h1>Posts</h1>

@if (Model.Count > 0)
{
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>User</th>
                <th>Topic ID</th>
                <th>Text</th>
                <th>Date & Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in Model)
            {
                <tr>
                    <td>@post.Id</td>
                    <td>@post.User</td>
                    <td>@post.TopicID</td>
                    <td>@post.Text</td>
                    <td>@post.Date</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No posts found.</p>
}