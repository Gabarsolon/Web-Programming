
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewStudent</title>
</head>
<body>
    <div>
        @{
            AspCoreMVCEF.Models.Student stud = (AspCoreMVCEF.Models.Student)
                ViewData["student"];
        }

        <b>Student Details </b><br />
        ID: @stud.Id  <br />
        Name : @stud.Name <br />
        Password: @stud.Password <br />
        Group_id: @stud.Group_id <br />
    </div>
</body>
</html>
